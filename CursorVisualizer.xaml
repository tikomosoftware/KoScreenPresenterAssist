<UserControl x:Class="ScreenPresenterAssist.CursorVisualizer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             IsHitTestVisible="False">
    <Canvas x:Name="VisualCanvas">
        <!-- 強調リング -->
        <Ellipse x:Name="HighlightRing"
                 Width="60" Height="60"
                 Stroke="#F39C12" StrokeThickness="3"
                 Visibility="Collapsed">
            <Ellipse.Effect>
                <BlurEffect Radius="5"/>
            </Ellipse.Effect>
        </Ellipse>

        <!-- クリック波紋（動的に生成） -->
    </Canvas>
</UserControl>
