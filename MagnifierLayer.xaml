<UserControl x:Class="ScreenPresenterAssist.MagnifierLayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             IsHitTestVisible="False">
    <Canvas x:Name="MagnifierCanvas">
        <!-- DWMサムネイルが表示される領域を定義するためのボーダー -->
        <Border x:Name="MagnifierBorder"
                Width="300" Height="300"
                BorderBrush="White" BorderThickness="2"
                CornerRadius="150" ClipToBounds="True">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Opacity="0.5"/>
            </Border.Effect>
            <!-- 
                 DWMサムネイルはこのBorderの位置に合わせて、
                 OverlayWindowのレイヤー上にDWMが直接描画します。
                 Backgroundを透明にしておく必要があります。
            -->
            <Grid Background="Transparent">
            </Grid>
        </Border>
    </Canvas>
</UserControl>
